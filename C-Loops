#include <stdio.h>

int main() {
    int N, sum = 0;

    printf("Enter a positive integer N: ");
    scanf("%d", &N);

    for (int i = 1; i <= N; i++) {
        sum += i;
    }

    printf("Sum of numbers from 1 to %d is %d\n", N, sum);

    return 0;
}

//DisplayingMultiplication.c

#include <stdio.h>

int main() {
    int num;

    printf("Enter a number to display its multiplication table: ");
    scanf("%d", &num);

    for (int i = 1; i <= 10; i++) {
        printf("%d x %d = %d\n", num, i, num * i);
    }

    return 0;
}

//for_loop

#include<stdio.h>

int main(){

    // start point
    // end point
    // ++/-- [+1][-1]

    int a;

    for(a = 0;a <= 10; a++){
        printf("%d\n",a);
    }

    return 0;
}

#include<stdio.h>

int main(){

    // start point
    // end point
    // ++/-- [+1][-1]

    int a;

    for(a = 10;a >=1; a--){
        printf("%d\n",a);
    }

    return 0;
}
